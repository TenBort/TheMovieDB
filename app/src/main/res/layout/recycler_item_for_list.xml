<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/image_film_list"
            android:layout_width="142dp"
            android:layout_height="142dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/name_film_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="name"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/image_film_list"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rate_film_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="rate"
            app:layout_constraintEnd_toEndOf="@+id/name_film_list"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/image_film_list"
            app:layout_constraintTop_toBottomOf="@+id/name_film_list" />

        <TextView
            android:id="@+id/date_film_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="date"
            app:layout_constraintBottom_toBottomOf="@+id/rate_film_list"
            app:layout_constraintStart_toEndOf="@+id/rate_film_list"
            app:layout_constraintTop_toTopOf="@+id/rate_film_list" />

        <TextView
            android:id="@+id/description_film_list"
            android:layout_width="240dp"
            android:layout_height="85dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="overview"
            app:layout_constraintBottom_toBottomOf="@+id/image_film_list"
            app:layout_constraintStart_toEndOf="@+id/image_film_list"
            app:layout_constraintTop_toBottomOf="@+id/rate_film_list" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>